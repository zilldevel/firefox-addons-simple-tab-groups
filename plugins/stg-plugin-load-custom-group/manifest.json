{
    "manifest_version": 3,

    "browser_specific_settings": {
        "gecko": {
            "id": "ztg-plugin-load-custom-group@zilldevel",
            "strict_min_version": "112.0"
        }
    },

    "incognito": "not_allowed",

    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "2.0",
    "author": "zilldevel",
    "homepage_url": "https://github.com/zilldevel/firefox-addons-zilldevel-tabgroups",

    "icons": {
        "96": "icons/icon.svg"
    },

    "action": {
        "default_area": "tabstrip",
        "default_icon": "icons/icon.svg",
        "default_title": "__MSG_defaultBrowserActionTitle__"
    },

    "permissions": [
        "notifications",
        "menus",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "default_locale": "en",

    "commands": {
        "_execute_action": {
            "description": "__MSG_defaultBrowserActionTitle__"
        }
    }


}
